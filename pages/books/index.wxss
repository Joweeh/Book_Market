.page {
  padding: 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.top-bar {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 20rpx;
}

.search-wrap {
  flex: 1;
}

.search-input {
  min-height: 72rpx;
  padding: 0 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  font-size: 26rpx;
}

.msg-btn {
  min-width: 120rpx;
  line-height: 1.9;
}

.header {
  font-size: 38rpx;
  font-weight: 700;
}

.header-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18rpx;
}

.user-line {
  margin-top: 10rpx;
  color: #667085;
  font-size: 22rpx;
}

.banner {
  height: 280rpx;
  border-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.banner-item {
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.banner-mask {
  width: 100%;
  height: 100%;
  background: linear-gradient(0deg, rgba(10, 17, 40, 0.68), rgba(10, 17, 40, 0.05));
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 20rpx;
  box-sizing: border-box;
}

.banner-title {
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}

.banner-sub {
  margin-top: 6rpx;
  color: rgba(255, 255, 255, 0.92);
  font-size: 22rpx;
}

.category-scroll {
  white-space: nowrap;
  margin-bottom: 14rpx;
}

.category-row {
  display: inline-flex;
  gap: 10rpx;
}

.category {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #475467;
  background: #e4e7ec;
}

.category.active {
  color: #ffffff;
  background: #111827;
}

.quick-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-bottom: 16rpx;
}

.quick-btn {
  line-height: 1.9;
}

.section {
  margin-bottom: 18rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #101828;
}

.section-sub {
  margin-top: 8rpx;
  margin-bottom: 12rpx;
  font-size: 22rpx;
  color: #667085;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.list.compact .card {
  padding: 14rpx;
}

.card {
  display: flex;
  gap: 16rpx;
  padding: 16rpx;
  background: #ffffff;
  border-radius: 14rpx;
  box-shadow: 0 8rpx 22rpx rgba(16, 24, 40, 0.06);
}

.cover {
  width: 150rpx;
  height: 196rpx;
  border-radius: 10rpx;
  background: #eef2f6;
}

.meta {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title {
  font-size: 28rpx;
  font-weight: 600;
  color: #101828;
}

.author {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #667085;
}

.price {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #f45b14;
  font-weight: 600;
}

.tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  color: #344054;
  background: #edf2f7;
}

.tag.recommend {
  color: #0c4a6e;
  background: #dbeafe;
}

.rank-list {
  background: #ffffff;
  border-radius: 14rpx;
  overflow: hidden;
}

.rank-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx;
  border-bottom: 1px solid #eaecf0;
}

.rank-item:last-child {
  border-bottom: 0;
}

.rank-no {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  background: #101828;
  color: #ffffff;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rank-main {
  flex: 1;
}

.rank-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #101828;
}

.rank-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #667085;
}

.rank-price {
  color: #f45b14;
  font-size: 26rpx;
  font-weight: 600;
}

.state {
  color: #667085;
  margin: 16rpx 0;
  font-size: 24rpx;
}

.state.error {
  color: #b42318;
}

.retry {
  margin-bottom: 16rpx;
}
