.page {
  min-height: 100vh;
  background: #f4f6fb;
  padding: 20rpx 20rpx 250rpx;
  box-sizing: border-box;
}

.state {
  margin-top: 30rpx;
  text-align: center;
  color: #667085;
  font-size: 28rpx;
}

.state.error {
  color: #b42318;
}

.retry-btn {
  margin-top: 14rpx;
  width: 220rpx;
  border-radius: 999rpx;
  background: #111827;
  color: #ffffff;
  font-size: 26rpx;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.hero-card {
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.hero-swiper {
  width: 100%;
  height: 480rpx;
}

.hero-image {
  width: 100%;
  height: 100%;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  line-height: 1.25;
  font-weight: 700;
  color: #0f172a;
}

.author {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #667085;
}

.price-row {
  margin-top: 14rpx;
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.price {
  font-size: 50rpx;
  line-height: 1;
  color: #f04438;
  font-weight: 700;
}

.origin-price {
  font-size: 24rpx;
  color: #98a2b3;
  text-decoration: line-through;
}

.chip-row {
  margin-top: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  background: #eef2ff;
  color: #364152;
}

.chip-strong {
  background: #d1fae5;
  color: #065f46;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 10rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #f2f4f7;
  padding: 12rpx 0;
}

.info-row:last-of-type {
  border-bottom: 0;
}

.info-label {
  font-size: 24rpx;
  color: #667085;
}

.info-value {
  font-size: 25rpx;
  color: #111827;
  max-width: 70%;
  text-align: right;
}

.tags {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: #f2f4f7;
  color: #475467;
  border-radius: 999rpx;
}

.desc {
  font-size: 26rpx;
  color: #344054;
  line-height: 1.7;
}

.guard-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.guard-item {
  font-size: 24rpx;
  color: #344054;
  line-height: 1.6;
  padding-left: 22rpx;
  position: relative;
}

.guard-item::before {
  content: '';
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #1d4ed8;
  position: absolute;
  left: 0;
  top: 14rpx;
}

.recommend-list {
  display: flex;
  flex-direction: column;
}

.recommend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 0;
  border-bottom: 1rpx solid #f2f4f7;
}

.recommend-item:last-child {
  border-bottom: 0;
}

.recommend-cover {
  width: 112rpx;
  height: 112rpx;
  border-radius: 12rpx;
  background: #f2f4f7;
}

.recommend-main {
  flex: 1;
  min-width: 0;
}

.recommend-title {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
  line-height: 1.35;
}

.recommend-sub {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #667085;
}

.recommend-price {
  font-size: 28rpx;
  color: #f04438;
  font-weight: 700;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(112rpx + env(safe-area-inset-bottom));
  padding: 16rpx 16rpx 18rpx;
  background: rgba(255, 255, 255, 0.97);
  box-shadow: 0 -8rpx 24rpx rgba(16, 24, 40, 0.1);
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 10rpx;
}

.btn {
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 14rpx;
  font-size: 24rpx;
  padding: 0;
}

.btn-light {
  background: #f2f4f7;
  color: #111827;
}

.btn-mid {
  background: #fee4e2;
  color: #b42318;
}

.btn-main {
  background: #111827;
  color: #ffffff;
}
