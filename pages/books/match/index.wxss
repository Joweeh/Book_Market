.page {
  padding: 24rpx;
  background: #f7f7f7;
  min-height: 100vh;
}

.header {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.field {
  margin-bottom: 14rpx;
}

.label {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.picker {
  background: #f3f4f6;
  border-radius: 12rpx;
  min-height: 68rpx;
  line-height: 68rpx;
  padding: 0 18rpx;
  font-size: 26rpx;
}

.btn {
  margin-top: 8rpx;
  background: #111827;
  color: #fff;
}

.btn.ghost {
  background: #fff;
  color: #111827;
}

.tip {
  color: #666;
  font-size: 22rpx;
  margin: 8rpx 0 12rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 14rpx;
  margin-bottom: 18rpx;
}

.item {
  background: #fff;
  border-radius: 14rpx;
  padding: 14rpx;
}

.course {
  display: inline-block;
  background: #e5e7eb;
  color: #374151;
  font-size: 20rpx;
  border-radius: 999rpx;
  padding: 4rpx 12rpx;
  margin-bottom: 8rpx;
}

.title {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
}

.author {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #6b7280;
}

.error {
  color: #c43;
  font-size: 22rpx;
  margin-top: 8rpx;
}

