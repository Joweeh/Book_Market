.page {
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
  background: #f5f7fb;
}

.profile-card,
.status-card,
.wallet-card,
.menu-list {
  background: #ffffff;
  border-radius: 20rpx;
}

.profile-card {
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.avatar-wrap {
  margin-right: 20rpx;
}

.avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.avatar-placeholder {
  background: #e8eefb;
  color: #1f2f56;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: 700;
}

.profile-meta {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.name {
  font-size: 38rpx;
  font-weight: 700;
  color: #0f172a;
}

.id-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #475467;
}

.school-text {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #667085;
}

.status-card {
  margin-bottom: 16rpx;
  padding: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #b42318;
  margin-bottom: 12rpx;
}

.login-btn {
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 14rpx;
  background: #111827;
  color: #ffffff;
  font-size: 28rpx;
}

.wallet-card {
  margin-bottom: 24rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.wallet-main {
  flex: 1;
}

.wallet-title {
  font-size: 24rpx;
  color: #667085;
}

.wallet-balance {
  margin-top: 8rpx;
  font-size: 46rpx;
  font-weight: 700;
  color: #0f172a;
}

.wallet-subtitle {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #98a2b3;
}

.group {
  margin-bottom: 18rpx;
}

.group-title {
  margin: 0 4rpx 12rpx;
  font-size: 26rpx;
  color: #475467;
  font-weight: 600;
}

.menu-item {
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f2f4f7;
}

.menu-item:last-child {
  border-bottom: 0;
}

.menu-main {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  color: #111827;
}

.menu-subtitle {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: #98a2b3;
}

.arrow {
  font-size: 38rpx;
  color: #98a2b3;
}
