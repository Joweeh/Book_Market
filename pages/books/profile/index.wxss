.page {
  min-height: 100vh;
  background: #f5f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
}

.avatar-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 18rpx;
}

.avatar-wrap {
  width: 108rpx;
  height: 108rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.avatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 20rpx;
}

.avatar-placeholder {
  background: #e8eefb;
  color: #344054;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.field {
  margin-bottom: 16rpx;
}

.label {
  font-size: 24rpx;
  color: #667085;
  margin-bottom: 8rpx;
}

.input,
.picker {
  min-height: 72rpx;
  line-height: 72rpx;
  background: #f2f4f7;
  border-radius: 14rpx;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #111827;
}

.textarea {
  width: 100%;
  min-height: 150rpx;
  background: #f2f4f7;
  border-radius: 14rpx;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  color: #111827;
}

.textarea-short {
  min-height: 96rpx;
}

.error {
  margin: 16rpx 6rpx 0;
  color: #b42318;
  font-size: 24rpx;
}

.save-btn {
  margin-top: 16rpx;
  height: 82rpx;
  line-height: 82rpx;
  border-radius: 16rpx;
  background: #111827;
  color: #ffffff;
  font-size: 30rpx;
}
