.page {
  padding: 24rpx;
  background: #f5f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 10rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 22rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
}

.subtitle {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #667085;
}

.field {
  margin-top: 22rpx;
}

.label {
  font-size: 28rpx;
  color: #111827;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.textarea {
  width: 100%;
  min-height: 220rpx;
  padding: 18rpx;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
  background: #f8fafc;
  font-size: 28rpx;
  line-height: 1.55;
  box-sizing: border-box;
}

.hint {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #94a3b8;
  text-align: right;
}

.img-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 18rpx;
  overflow: hidden;
  position: relative;
  background: #f1f5f9;
}

.img-preview {
  width: 100%;
  height: 100%;
}

.img-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 42rpx;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  border-radius: 999rpx;
  background: rgba(15, 23, 42, 0.6);
  color: #ffffff;
  font-size: 28rpx;
}

.img.add {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  box-sizing: border-box;
  border: 1rpx dashed #cbd5e1;
  background: #ffffff;
}

.add-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.mini {
  font-size: 24rpx;
  padding: 0 16rpx;
}

.mini.ghost {
  background: #ffffff;
  color: #111827;
  border: 1rpx solid #e5e7eb;
}

.location-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.location-text {
  flex: 1;
  font-size: 26rpx;
  color: #334155;
  padding: 14rpx 16rpx;
  background: #f8fafc;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submit {
  margin-top: 26rpx;
  background: #0f172a;
  color: #ffffff;
  border-radius: 18rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 92rpx;
  line-height: 92rpx;
}

.history {
  margin-top: 18rpx;
}

.history-item {
  padding: 18rpx;
  border-radius: 18rpx;
  background: #f8fafc;
  border: 1rpx solid #eef2f7;
  margin-bottom: 14rpx;
}

.history-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.history-time {
  font-size: 24rpx;
  color: #64748b;
}

.history-status {
  font-size: 24rpx;
  color: #0f172a;
  background: #e2e8f0;
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
}

.history-content {
  font-size: 28rpx;
  color: #0f172a;
  line-height: 1.6;
  white-space: pre-wrap;
}

.history-meta {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #475569;
}

