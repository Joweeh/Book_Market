.page {
  padding: 24rpx;
  background: #f8fafc;
  min-height: 100vh;
}

.top-bar {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.search-wrap {
  flex: 1;
}

.search-input {
  min-height: 72rpx;
  padding: 0 20rpx;
  border-radius: 12rpx;
  background: #ffffff;
  font-size: 26rpx;
}

.msg-btn {
  min-width: 120rpx;
  line-height: 1.9;
}

.header-row {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.header {
  font-size: 38rpx;
  font-weight: 700;
  color: #0f172a;
}

.sub {
  margin-top: 8rpx;
  color: #64748b;
  font-size: 22rpx;
}

.switch-btn {
  line-height: 1.9;
}

.upload-card {
  margin-top: 16rpx;
  background: linear-gradient(135deg, #0f172a, #1e293b);
  color: #ffffff;
  border-radius: 16rpx;
  padding: 18rpx;
}

.upload-title {
  font-size: 30rpx;
  font-weight: 700;
}

.upload-text {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.88);
}

.upload-btn {
  margin-top: 14rpx;
  background: #ffffff;
  color: #0f172a;
  font-weight: 600;
}

.category-scroll {
  margin-top: 16rpx;
  margin-bottom: 14rpx;
  white-space: nowrap;
}

.category-row {
  display: inline-flex;
  gap: 10rpx;
}

.category {
  padding: 8rpx 18rpx;
  border-radius: 999rpx;
  background: #e2e8f0;
  color: #334155;
  font-size: 22rpx;
}

.category.active {
  background: #111827;
  color: #ffffff;
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
}

.empty {
  margin-top: 16rpx;
  color: #64748b;
  font-size: 24rpx;
}

.list {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 14rpx;
}

.item {
  background: #ffffff;
  border-radius: 14rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(15, 23, 42, 0.06);
}

.item-title {
  font-size: 28rpx;
  color: #0f172a;
  font-weight: 600;
}

.item-sub {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #64748b;
}

.item-summary {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #334155;
}

.item-foot {
  margin-top: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.badge {
  background: #dbeafe;
  color: #1d4ed8;
  border-radius: 999rpx;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
}

.open-btn {
  line-height: 1.8;
}
